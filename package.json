{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend API for Vasu Gupta's portfolio website",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch --env-file=.env.development src/server.js",
    "start": "node src/server.js",
    "build": "npx prisma generate",
    "postinstall": "npx prisma generate",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate": "npx prisma migrate dev"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "keywords": [
    "portfolio",
    "api",
    "express",
    "prisma"
  ],
  "author": "Vasu Gupta",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^8.0.1",
    "resend": "^6.9.1"
  },
  "devDependencies": {
    "prisma": "^6.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
